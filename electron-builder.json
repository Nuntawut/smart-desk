{
  "appId": "th.ac.sut.beta.ie.myapp",
  "productName": "ENGi Take a Break",
  "copyright": "Copyright Â© year CPE SUT",
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "publish": [
    {
      "provider": "github",
      "repo": "smart-desk",
      "owner": "Nuntawut"
    }
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "nsis"
    ]
  },
  "portable": {
    "splashImage": "dist/assets/icons/electron.bmp"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  },
  "nsis": {
    "perMachine": true
  }
}
