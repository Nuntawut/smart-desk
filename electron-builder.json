{
  "productName": "Smart Desk",
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "publish": [
    {
      "provider": "github",
      "repo": "smart-desk",
      "owner": "Nuntawut",
      "private": false,
      "token": "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"
    }
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "nsis"
    ]
  },
  "portable": {
    "splashImage": "dist/assets/icons/electron.bmp"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
